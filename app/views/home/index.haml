#picker
  %ul
    - @bands.each_with_index do |band, ii|
      %li.band{data: {track_id: band.track_id}}
        %figure{style: "background-image: url(#{band.thumbnail.url})"}
          .icon
            %i.icon-play
          .veil
        .name
          %h5= band.name
          %h6= band.track_name
        .clear
  -#%button#pause PAUSE
  .clear
#player
  %iframe#tbs-player{src: 'http://player.vimeo.com/video/72523306?api=1&player_id=tbs-player&byline=0&title=0', width: '780px', height: '439px', frameborder: '0', webkitAllowFullScreen: true, mozallowfullscreen: true, allowFullScreen: true }